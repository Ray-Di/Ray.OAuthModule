{
	"name": "ray/oauth-module",
	"description": "OAuth module for Ray.Di",
	"keywords": ["Ray.Di", "OAuth"],
	"license": "MIT",
	"require": {
		"php": ">=7.0",
		"ray/di": "~2.6",
		"maye/oauth-client": "~1.3"
	},
	"require-dev": {
		"phpunit/phpunit": "^6.2",
		"squizlabs/php_codesniffer": "^3.1",
		"phpmd/phpmd": "^2.6",
		"friendsofphp/php-cs-fixer": "^2.8"
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"autoload": {
		"psr-4": {
			"Ray\\OAuthModule\\": "src/"
		}
	},
	"autoload-dev":{
		"psr-4":{
			"Ray\\OAuthModule\\": [
				"tests/",
				"tests/Fake"
			]
		}
	},
	"scripts": {
		"test": [
			"phpmd src text ./phpmd.xml",
			"phpcs src tests",
			"phpunit --coverage-text"
		],
		"cs-fix": [
			"php-cs-fixer fix -v",
			"phpcbf src"
		]
	}
}
