{
	"name": "ray/oauth-module",
	"description": "OAuth module for Ray.Di",
	"keywords": ["Ray.Di", "OAuth"],
	"license": "MIT",
	"require": {
		"php": ">=7.0",
		"ray/di": "~2.6",
		"maye/oauth-client": "~1.3"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.8",
		"squizlabs/php_codesniffer": "~2.6",
		"phpmd/phpmd": "~2.4",
		"fabpot/php-cs-fixer": "~1.11"
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"autoload": {
		"psr-4": {
			"Ray\\OAuthModule\\": "src/"
		}
	},
	"autoload-dev":{
		"psr-4":{
			"Ray\\OAuthModule\\": [
				"tests/",
				"tests/Fake"
			]
		}
	},
	"scripts": {
		"test": [
			"phpmd src text ./phpmd.xml",
			"phpcs src tests",
			"phpunit --coverage-text"
		],
		"cs-fix": [
			"php-cs-fixer fix --config-file=./.php_cs --diff -v",
			"phpcbf src"
		]
	}
}
